<main class="dark">
  <div
    class="jumbo after:mix-blend-difference absolute -inset-[10px] lg:h-[50vh] h-[40vh] opacity-50"
  >
  </div>
</main>

<style>
  @keyframes jumbo {
    from {
      background-position:
        50% 50%,
        50% 50%;
    }
    to {
      background-position:
        350% 50%,
        350% 50%;
    }
  }

  .jumbo {
    --stripes: repeating-linear-gradient(
      100deg,
      #1a1a1a 0%,
      #1a1a1a 7%,
      transparent 10%,
      transparent 12%,
      #1a1a1a 16%
    );
    --stripesDark: repeating-linear-gradient(
      100deg,
      #1a1a1a 0%,
      #1a1a1a 7%,
      transparent 10%,
      transparent 12%,
      #1a1a1a 16%
    );
    --rainbow: repeating-linear-gradient(
      100deg,
      #60a5fa 10%,
      #5c00f9 15%,
      #a64aff 20%,
      #6a00ff 25%,
      #330072 30%
    );
    background-image: var(--stripes), var(--rainbow);
    background-size: 300%, 200%;
    background-position:
      50% 50%,
      50% 50%;

    filter: blur(10px) invert(100%);

    mask-image: radial-gradient(
      ellipse at 100% 0%,
      #1a1a1a 40%,
      transparent 70%
    );

    pointer-events: none;
  }

  .jumbo::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--stripes), var(--rainbow);
    background-size: 200%, 100%;
    animation: jumbo 60s linear infinite;
    background-attachment: fixed;
  }

  .dark .jumbo {
    background-image: var(--stripesDark), var(--rainbow);
    filter: blur(10px) opacity(50%) saturate(200%);
  }
  .dark .jumbo::after {
    background-image: var(--stripesDark), var(--rainbow);
  }
</style>
