<main class="dark top-0">
  <div
    class="relative flex flex-col md:h-[60vh] h-[70vh] items-center justify-center transition-bg"
  >
    <div class="absolute inset-0 overflow-hidden">
      <div class="jumbo after:mix-blend-difference absolute -inset-[10px] opacity-50"></div>
    </div>
    <slot />
  </div>
</main>

<style>
  @keyframes jumbo {
    from {
      background-position:
        50% 50%,
        50% 50%;
    }
    to {
      background-position:
        350% 50%,
        350% 50%;
    }
  }

  .jumbo {
    --stripesDark: repeating-linear-gradient(
      100deg,
      #1A1A1A 0%,
      #1A1A1A 7%,
      transparent 10%,
      transparent 12%,
      #1A1A1A 16%
    );
    --rainbow: repeating-linear-gradient(
      100deg,
      #60a5fa 10%,
      #5c00f9 15%,
      #a64aff 20%,
      #6A00FF 25%,
      #330072 30%
    );
    background-image: var(--stripes), var(--rainbow);
    background-size: 300%, 200%;
    background-position:
      50% 50%,
      50% 50%;

    filter: blur(10px) invert(100%);

    mask-image: radial-gradient(ellipse at 100% 0%, #1A1A1A 40%, transparent 70%);

    pointer-events: none;
  }

  .jumbo::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--stripes), var(--rainbow);
    background-size: 200%, 100%;
    animation: jumbo 60s linear infinite;
    background-attachment: fixed;
  }

  .dark .jumbo {
    background-image: var(--stripesDark), var(--rainbow);
    filter: blur(10px) opacity(50%) saturate(200%);
  }
  .dark .jumbo::after {
    background-image: var(--stripesDark), var(--rainbow);
  }
</style>
</style>
