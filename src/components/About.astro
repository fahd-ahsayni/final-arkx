---
import { Image } from "astro:assets";
import LogoInfiniteScrollComponent from "./LogoInfiniteScrollComponent.astro";
import ark from "../assets/design/bg-ark.png";
import arkadians from "../assets/design/arkadians.png";
---

<section
  id="about"
  class="w-full px-4 lg:px-20 md:px-12 lg:mt-32 -mt-10 relative overflow-hidden"
>
  <div class="mb-8 md:max-w-full max-w-full mx-auto">
    <h2
      class="uppercase lg:text-[2vw] md:text-[3vw] text-[6vw] text-start text-white relative z-10 md:font-bold font-medium"
    >
      Unlock The power of <br /> Tech with Ark-x
    </h2>
    <!-- <div class="grid_gradient"></div> -->
  </div>
  <div class="flex lg:flex-row flex-col mt-6 justify-center items-center">
    <div class="lg:w-1/2 w-full relative">
      <p class="lg:text-xl text-lg text-gray-100">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima iste
        ullam nobis esse. Beatae, eius aspernatur? Distinctio saepe autem
        doloremque ducimus tempora incidunt ex! Aspernatur est ipsam doloribus
        nemo animi.
      </p>
      <p class="lg:text-xl text-lg text-gray-100 mt-3">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima iste
        ullam nobis esse.
      </p>
      <div class="w-full flex mt-8 items-center">
        <button
          class="text-white uppercase px-10 py-3 bg-gradient-to-br from-[#ff3200] to-[#ff6000] rounded-xl font-semibold shadow-md"
        >
          <span class="w-full h-full flex items-center justify-center">
            <span class="mr-4">Red More ?</span>
            <svg
              class="w-7 h-7"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
            </svg>
          </span>
        </button>
      </div>
      <!-- <div class="w-full rounded-3xl mt-12">
        <div class="relative inset-0 w-full h-96 flex items-center justify-center">
          <Image
            src={ark}
            class="absolute w-full bottom-0 rounded-full"
            alt=""
          />
          <Image src={arkadians} alt="" class="absolute bottom-0 w-3/4" />
        </div>
      </div> -->
    </div>
    <div class="w-full flex items-center justify-center lg:mt-0 md:mt-96 mt-72">
      <div id="image1" class="images"></div>
      <div id="image2" class="images"></div>
      <div id="image3" class="images"></div>
    </div>
  </div>

  <div class="mt-72 md:mt-96">
    <h2
      class="uppercase lg:text-[1vw] md:text-[2vw] text-[3.5vw] text-end text-white relative"
    >
      ARKx is Supported by a Network <br / class="block lg:hidden"> of World-Class Partners
    </h2>
    <div class="mt-8">
      <LogoInfiniteScrollComponent />
    </div>
  </div>
</section>

<style>
  @tailwind components;
  @layer components {
    .images {
      @apply absolute lg:w-[20vw] md:w-[35vw] w-[35vw] lg:h-[25vw] md:h-[50vw] h-[50vw] rounded-xl grayscale cursor-pointer
        hover:grayscale-0 hover:scale-110 bg-cover bg-center;
      transition: all cubic-bezier(0.19, 1, 0.22, 1) 1.5s;
    }
  }
  .images:nth-child(1) {
    transform: translate(-40%, -8%) rotate(-20deg);
    background-image: url(https://ik.imagekit.io/fahdahsayni/arkx/abooutImage2.jpg?updatedAt=1697454071111);
  }
  .images:nth-child(2) {
    transform: translate(-15%, 0%) rotate(-15deg);
    background-image: url(https://ik.imagekit.io/fahdahsayni/arkx/aboutImage1.jpg?updatedAt=1697454071276);
  }
  .images:nth-child(3) {
    transform: translate(20%, 10%) rotate(-5deg);
    background-image: url(https://ik.imagekit.io/fahdahsayni/arkx/aboutIamge3.jpg?updatedAt=1697454071167);
  }
</style>
