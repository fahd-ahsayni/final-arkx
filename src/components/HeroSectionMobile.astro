---
import { Image } from "astro:assets";
import space from "../assets/design/galaxy.webp";
import astro from "../assets/design/astro.svg";
import shapeOne from "../assets/design/shapeOne.svg";
import student from "../assets/icons/graduated.svg";
import developper from "../assets/icons/programmer.svg";
import job from "../assets/icons/job.svg";
import shapeTwo from "../assets/design/shapeTwo.svg";
---

<section
  class="w-full h-screen flex flex-col items-center justify-start mt-40 md:hidden"
>
  <div class="w-full text-white font-semibold px-8">
    <h2 class="text-[6vw] text-end">Unleash African's</h2>
    <h2 class="text-[16vw] uppercase flex justify-center items-center gap-6">
      <span class="relative w-full flex items-center justify-end">
        <Image src={space} alt="" class="w-full rounded-full" />
        <Image src={astro} alt="" class="absolute bottom-0" />
      </span>
      <span class="w-full leading-[16vw]">Tech</span>
    </h2>
    <h2 class="text-[10vw] relative flex items-center justify-center">
      <span>Potential.</span>
      <Image src={shapeOne} alt="" class="w-20 absolute -z-10 right-16" />
    </h2>
  </div>
  <div class="max-w-lg px-6 mx-auto text-center mt-2.5">
    <p class="text-white text-lg">
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Aperiam aut
      dolore maxime temporibus.
    </p>
    <div class="flex items-center mt-8 gap-x-4 justify-center w-full">
      <button
        class="px-8 py-3.5 rounded-full bg-gradient-to-br from-[#ff3200] to-[#ff6000] text-white font-medium"
      >
        Join Community
      </button>
      <button
        class="w-16 h-16 flex items-center justify-center bg-white rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="#161616"
          class="w-6 h-6"
        >
          <path
            fill-rule="evenodd"
            d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
  </div>

  <div
    class="w-full px-8 mt-16 flex flex-col items-center justify-center gap-y-10"
  >
    <div class="h-full w-full px-8 py-4 border border-white rounded-full">
      <div class="flex items-center justify-start w-full">
        <div class="flex space-x-1 items-center justify-center mr-8">
          <Image src={student} alt="student Arkx" class="w-10 h-auto" />
          <div class="text-white">
            <p class="font-medium">+600</p>
            <p class="text-sm">Alumnis</p>
          </div>
        </div>
        <div class="flex space-x-2 items-center justify-center">
          <Image src={developper} alt="student Arkx" class="w-10 h-auto" />
          <div class="text-white">
            <p class="font-medium">+5000</p>
            <p class="text-sm">Initiated to coding</p>
          </div>
        </div>
        <div class="flex space-x-2 items-center justify-center">
          <Image src={job} alt="student Arkx" class="w-10 h-auto" />
          <div class="text-white">
            <p class="font-medium">+87%</p>
            <p class="text-sm">Insertion rate</p>
          </div>
        </div>
      </div>
    </div>
    <div class="relative w-full flex items-center justify-center">
      <Image src={shapeTwo} alt="" class="absolute w-32" />
    </div>
    <div class="w-full border rounded-full">
      <h2 class="font-medium text-3xl text-center py-8 text-white">
        5 Years of Impact
      </h2>
    </div>
  </div>
</section>
